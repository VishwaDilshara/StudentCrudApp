@model IEnumerable<StudentCrudApp.Models.Student>
@{
    ViewData["Title"] = "Students List";
}

<h1>Students</h1>
<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Add New Student</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Age)</th>
            <th>@Html.DisplayNameFor(model => model.First().Course)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.Age</td>
            <td>@student.Course</td>
            <td>
                <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = student.Id })">Details</a>
                <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = student.Id })">Edit</a>
                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = student.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>